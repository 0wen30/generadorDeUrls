{{#if urltoEdit}}
  <form method="POST" action="/editar/{{urltoEdit._id}}">
    <div class="form-group row w-50 mx-auto my-2  ">
      <div class="col-sm-10">
        <input name="origin" type="text" placeholder="Ingrese URL" class="form-control-plaintext" id="staticEmail" value="{{urltoEdit.origin}}">
        <button type="submit" class="btn btn-success w-100 mx-auto my-2">Success</button>
      </div>
    </div>
  </form>
{{else}}
  <form method="POST" action="/">
    <div class="form-group row w-50 mx-auto my-2  ">
      <div class="col-sm-10">
        <input name="origin" type="text" placeholder="Ingrese URL" class="form-control-plaintext" id="staticEmail">
        <button type="submit" class="btn btn-success w-100 mx-auto my-2">Success</button>
      </div>
    </div>
  </form>
{{/if}}